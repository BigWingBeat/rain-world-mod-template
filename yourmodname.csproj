<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>yourname.yourmodname</AssemblyName> <!-- Plugin GUID -->
    <Product>Your Mod Name</Product> <!-- Plugin Name -->
    <ModFolderName>yourmodname</ModFolderName>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="HOOKS-Assembly-CSharp" HintPath="references/HOOKS-Assembly-CSharp.dll" />
    <Reference Include="PUBLIC-Assembly-CSharp" HintPath="references/PUBLIC-Assembly-CSharp.dll" />
    <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
    <PackageReference Include="BepInEx.Core" Version="5.4.17" /> <!-- The version of BepInEx shipped with Rain World -->
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
    <PackageReference Include="UnityEngine.Modules" Version="2020.3.38" IncludeAssets="compile" /> <!-- The version of Unity shipped with Rain World -->
  </ItemGroup>

  <ItemGroup>
    <ModRootFiles Include="modinfo.json" />
    <ModRootFiles Include="thumbnail.png" />
    <ModPluginFiles Include="$(OutputPath)$(AssemblyName).dll" />
  </ItemGroup>

  <Target Name="BuildModFolder" AfterTargets="Build">
    <Copy SourceFiles="@(ModRootFiles)" DestinationFolder="build/$(ModFolderName)" />
    <Copy SourceFiles="@(ModPluginFiles)" DestinationFolder="build/$(ModFolderName)/plugins" />
  </Target>

  <Target Name="CleanModFolder" AfterTargets="Clean">
    <RemoveDir Directories="build" />
  </Target>

</Project>
